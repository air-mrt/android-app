<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
android:id="@+id/custom_toast_container">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:src="@drawable/ic_check_circle_black_24dp"
            android:id="@+id/imageView2" android:layout_weight="1"/>
    <TextView
            android:text="Product Posted Successfully!"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView2" android:layout_weight="1"
            android:textSize="18sp"/>
</LinearLayout>