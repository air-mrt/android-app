<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>

    </data>
    <androidx.core.widget.NestedScrollView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
    >
        <androidx.constraintlayout.widget.ConstraintLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".ui.fragments.RegisterFragment">
            <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="Full Name"
                    app:startIconDrawable="@drawable/ic_title_black_24dp"
                    android:id="@+id/fullname_editTextLayout"
                    tools:layout_conversion_absoluteHeight="59dp"
                    tools:layout_conversion_absoluteWidth="190dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp" app:layout_constraintTop_toTopOf="parent">
                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:id="@+id/fullname_editText"
                        android:ems="10" tools:layout_conversion_absoluteHeight="53dp"
                        tools:layout_editor_absoluteY="6dp"
                        tools:layout_editor_absoluteX="0dp" tools:layout_conversion_absoluteWidth="190dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="Phone"
                    app:startIconDrawable="@drawable/ic_contact_phone_black_24dp"
                    android:id="@+id/phone_editTextLayout"
                    tools:layout_conversion_absoluteHeight="59dp"
                    tools:layout_conversion_absoluteWidth="190dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/fullname_editTextLayout"
            >
                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        android:id="@+id/phone_editText"
                        android:ems="10" tools:layout_conversion_absoluteHeight="53dp"
                        tools:layout_editor_absoluteY="6dp"
                        tools:layout_editor_absoluteX="0dp" tools:layout_conversion_absoluteWidth="190dp"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="e-mail"
                    app:startIconDrawable="@drawable/ic_email_black_24dp"
                    android:id="@+id/email_editTextLayout"
                    tools:layout_conversion_absoluteHeight="59dp"
                    tools:layout_conversion_absoluteWidth="190dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/phone_editTextLayout"
            >
                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:id="@+id/email_editText"
                        android:ems="10" tools:layout_conversion_absoluteHeight="53dp"
                        tools:layout_editor_absoluteY="6dp"
                        tools:layout_editor_absoluteX="0dp" tools:layout_conversion_absoluteWidth="190dp"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="Username"
                    app:startIconDrawable="@drawable/ic_person_black_24dp"
                    android:id="@+id/username_editTextLayout"
                    tools:layout_conversion_absoluteHeight="59dp"
                    tools:layout_conversion_absoluteWidth="190dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/email_editTextLayout"
            >
                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:id="@+id/username_editText"
                        android:ems="10" tools:layout_conversion_absoluteHeight="53dp"
                        tools:layout_editor_absoluteY="6dp"
                        tools:layout_editor_absoluteX="0dp" tools:layout_conversion_absoluteWidth="190dp"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    app:startIconDrawable="@drawable/ic_security_black_24dp"
                    android:id="@+id/password_editTextLayout"
                    tools:layout_conversion_absoluteHeight="59dp"
                    tools:layout_conversion_absoluteWidth="190dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/username_editTextLayout"
            >
                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:id="@+id/password_editText"
                        android:ems="10" tools:layout_conversion_absoluteHeight="53dp"
                        tools:layout_editor_absoluteY="6dp"
                        tools:layout_editor_absoluteX="0dp" tools:layout_conversion_absoluteWidth="190dp"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.button.MaterialButton

                    style="@style/Widget.MaterialComponents.Button"
                    android:text="Register"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/post_button"
                    tools:layout_conversion_absoluteHeight="48dp"
                    tools:layout_conversion_absoluteWidth="167dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/password_editTextLayout"
                    android:layout_marginTop="8dp" app:layout_constraintHorizontal_bias="0.0"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>